<Window x:Class="SakuraDesktop.PresentationTier.MessageBoxes.WARNING"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SakuraDesktop.PresentationTier.MessageBoxes"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Title="WARNING" Height="200" Width="400">
    <Window.Background>
        <ImageBrush ImageSource="/images/templates/carbonFiberWarning.jpg"/>
    </Window.Background>
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="36,97,0,0" TextWrapping="Wrap" Text="You need to enter a path before accepting!" VerticalAlignment="Top" Width="328" FontSize="17" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFFDBB40" IsEnabled="False"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="140,140,0,0" VerticalAlignment="Top" Width="120" Height="40" FontSize="17" Background="#FFFDBB40" BorderBrush="{x:Null}" Click="ButtonOK"/>
    </Grid>
</Window>
