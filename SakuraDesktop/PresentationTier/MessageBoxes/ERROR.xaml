<Window x:Class="SakuraDesktop.PresentationTier.MessageBoxes.ERROR"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SakuraDesktop.PresentationTier.MessageBoxes"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Title="ERROR" Height="200" Width="400">
    <Window.Background>
        <ImageBrush ImageSource="/images/templates/carbonFiberError.jpg"/>
    </Window.Background>
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="74,97,0,0" TextWrapping="Wrap" Text="Error occured while proceeding!" VerticalAlignment="Top" Width="251" FontSize="17" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFFD5854" IsEnabled="False"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="140,140,0,0" VerticalAlignment="Top" Width="120" Height="40" FontSize="17" Background="#FFFD5854" BorderBrush="{x:Null}" Click="ButtonOK"/>
    </Grid>
</Window>
